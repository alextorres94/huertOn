{% extends '::base.html.twig' %}

{% block body %}
<div class="row" id="orchard-img">
  <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 ">
    <div class="fullscreen background parallax" style="padding:200px; background-image: url('{{ orchard.images[0].src }}'); background-attachment: fixed;"  data-diff="100"></div>
  </div>
</div>



<div class="row" id="location-contact">
  <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 container">
    <h3>{{ orchard.name }}</h3>
    <a href="#location">{{ orchard.street }}</a>
  </div>

  <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 container">
    <a href="#contact"><button type="button" name="button" id="btn-contact">CONTACTA</button></a>
  </div>
</div>
<div class="spacing"></div>



<div class="row container" id="next-activities">
  <!-- MOSTRAR LAS PRÓXIMAS ACTIVIDADES DE CADA HUERTO (3 COLUMNAS) -->
  <h5>PRÓXIMAS ACTIVIDADES</h5>
  <hr class="hr-orchard-profile">
  {% if orchard.orchardActivity is empty %}
  <h1>Este huerto no tiene actividades</h1>
  {% else %}
  {% for orchardActivity in orchard.orchardActivity %}
  <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">

    <h5>{{ orchardActivity.name }}</h5>
  </div>
  {% endfor %}
  {% endif %}

</div>
<div class="spacing"></div>



<div class="row container" id="philosophy">
  <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
    " {{ orchard.governanceModel }} "
  </div>
</div>
<div class="spacing"></div>



<div class="row container" id="how-is-it">
  <h5>CÓMO ES</h5>
  <hr class="hr-orchard-profile">
  <div class="col-12 col-sm-12 col-md-1 col-lg-1 col-xl-1"></div>
<!-- TIPO DE HUERTO -->
  <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5 border">
    <h6>Tipo de huerto</h6>
    <br>
    <br>
    <ul>
      {% for orchardType in orchard.orchardType %}
      <li>{{ orchardType.name }}</li>
      {% endfor %}
    </ul>
  </div>

  <!-- EQUIPAMIENTO -->
  <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5 border">
    <h6>Equipamiento</h6>
    <br>
    <br>
    <ul>
      {% for orchardService in orchard.orchardService %}
      <li>{{ orchardService.name }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
<div class="spacing"></div>



<div class="row container" id="how-to-join">
  <h5>CÓMO UNIRTE</h5>
  <hr class="hr-orchard-profile">
  <div class="col-12 col-sm-12 col-md-1 col-lg-1 col-xl-1"></div>
  <!-- MODALIDADES -->
    <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5 border">
      <h6>Modalidades</h6>
      <br>
      <br>
      <ul>
        {% for orchardParticipate in orchard.orchardParticipate %}
        <li>{{ orchardParticipate.name }}</li>
        {% endfor %}
      </ul>

    </div>

    <!-- NORMAS DE HUERTO -->
    <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5 border">
      <h6>Antes es importante que sepas</h6>
      <br>
      <br>
      Mira <a href="/webs/orchards/files/XXXX">AQUÍ</a> las normas del huerto.
    </div>

    <div class="spacing"></div>
    <!-- PASOS PARA INSCRIBIRTE -->
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" style="margin-top:40px">
      <h6>¿Qué necesitas para inscribirte?</h6>
      <br>
    </div>
</div>
<div class="spacing"></div>



<div class="row container" id="location">
  <h5>DÓNDE SE ENCUENTRA</h5>
  <hr class="hr-orchard-profile">
  <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <div id="map-show" style="height:400px; width:100%;"></div>
    <input type="text" id="Geometry" value="{{orchard.geometry}}" hidden="hidden">
  </div>
</div>
<div class="spacing"></div>



<div class="row container" id="contact">
  <!-- TIENES ALGUNA PREGUNTA -->
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6" style="background-color:#f2f2f2; border-radius: 15px; padding: 40px;">
      <h3>¿Tienes alguna pregunta?</h3>
      <hr class="hr-orchard-profile">
      <br>
      <br>

      <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">

      </div>

      <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">

      </div>

    </div>

    <!-- FORMULARIO DE CONTACTO -->
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">

    </div>
</div>
<div class="spacing"></div>

<script src="{{ asset('/js/map_show.js')}}" charset="utf-8"></script>
{% endblock %}
