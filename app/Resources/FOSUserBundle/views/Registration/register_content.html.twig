<link rel="stylesheet" type="text/css" href="{{ asset('/css/register.css') }}" />

<div class="spacing"></div>

<div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 col-centered">
  <div class="spacing"></div>
    <h4>{{ 'user.register.title'|trans }}</h4>

    {% trans_default_domain 'messages' %}
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    {{ form_widget(form) }}

    {{ form_rest(form) }}
      <label class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input">
        <span class="custom-control-indicator"></span>
        <div class="custom-control-description legal-desktop">  <a target="_blank" href="{{ asset('html/terms-conditions.html') }}">{{ 'user.register.conditions'|trans }}</a> y la <a target="_blank" href="{{ asset('html/privacy-policy.html') }}">{{ 'user.register.privacy'|trans }}</a>.</div>
        <div class="custom-control-description legal-mobile">{{ 'user.register.read'|trans }} <u data-toggle="modal" data-target="#modalCondicionesUso">{{ 'user.register.conditions'|trans }}</u> y la <u data-toggle="modal" data-target="#modalPrivacidad">{{ 'user.register.privacy'|trans }}</u>.</div>
      </label>
<br>
      <div>
        <button type="submit" class="btn list-bt" name="button">{{ 'user.register.submit'|trans }}</button>
      </div>
<br>
    {{ form_end(form) }}

    <a href="/login">{{ 'user.register.acount'|trans }}</a>

    <br>

    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" class="btn btn-block btn-social btn-facebook">
      <span class="fa fa-facebook"></span> Sign in with Facebook
    </a>

    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" class="btn btn-block btn-social btn-google">
      <span class="fa fa-google"></span> Sign in with Google
    </a>

    <br>


<script type="text/javascript">
    $('#fos_user_registration_form_plainPassword_first').hidePassword(true);
    $('#fos_user_registration_form_plainPassword_second').hidePassword(true);
    </script>

  </div><!--end col-->

<div class="modal fade" id="modalCondicionesUso">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">{{ 'user.register.conditions'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'user.register.privacyPolicy'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="modalPrivacidad">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">{{ 'user.register.privacy'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'user.register.privacyPolicy-2'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'stepBase.close'|trans }}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
